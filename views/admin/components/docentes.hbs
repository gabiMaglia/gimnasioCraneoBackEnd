<div class="container holder">

  <div id="head" class="row">
    <div>
      <h3>Listado de docentes</h3>
    </div>
    <div>
      <a href="/admin/docentes/agregar" class="btn btn btn-danger">
        <i class="fa fa-plus" id="addBtn">Nuevo</i>
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>

            <th class="table-light" id="thead" scope="col">Nombre</th>
            <th class="table-light" id="thead" scope="col">Apellido</th>
            <th class="table-light hidden3" id="thead" scope="col">DNI</th>
            <th class="table-light hidden2" id="thead" scope="col">Telefono</th>
            <th class="table-light hidden2" id="thead" scope="col">e-mail</th>
            <th
              class="table-light hidden2"
              id="thead"
              scope="col"
            >Instagram</th>
            <th class="table-light hidden2" id="thead" scope="col">Facebook</th>
            <th class="table-light hidden1" id="thead" scope="col">Horario</th>
            <th class="table-light" id="thead" scope="col">Acciones</th>

          </tr>
        </thead>
        <tbody>
          {{#each docentes}}
            <tr>

              <th class="table-light" id="tbody" scope="row">{{nombre}}</th>
              <th class="table-light" id="tbody" scope="row">{{apellido}}</th>
              <th
                class="table-light hidden3"
                id="tbody"
                scope="row"
              >{{dni}}</th>
              <th
                class="table-light hidden2"
                id="tbody"
                scope="row"
              >{{telefono}}</th>
              <th
                class="table-light hidden2"
                id="tbody"
                scope="row"
              >{{email}}</th>
              <th
                class="table-light hidden2"
                id="tbody"
                scope="row"
              >{{instagramAdd}}</th>
              <th
                class="table-light hidden2"
                id="tbody"
                scope="row"
              >{{facebookAdd}}</th>
              <th
                class="table-light hidden1"
                id="tbody"
                scope="row"
              >{{horario}}</th>

              <td style="border: none;" class="text-center">
                <a
                  href="/admin/docentes/modificar/{{id_docente}}"
                  class="btn btn-m btn-secondary"
                >
                  <i class="fa fa-pencil"></i>
                </a>
                <a
                  href="/admin/docentes/eliminar/{{id_docente}}"
                  class="btn btn-m btn-secondary"
                >
                  <i class="fa fa-trash"></i>
                </a>
                <a
                  href="/admin/docentes/perfilPersonal/{{id_docente}}"
                  id="mods"
                  class="btn btn-m btn-secondary"
                >
                  <i class="fa fa-eye"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>

      </table>

    </div>
  </div>
  
</div>
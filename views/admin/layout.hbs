      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>

    <title>{{title}}</title>
  </head>
  <body>

    <header class="header">
      <div class="centroheader holder">
        <nav class="nav">

          <figure class="banner">
            <div>
              <p class="logoText">
                <span class="mainLogo">GIMNASIO CRANEO</span>
              </p>
            </div>
          </figure>

          <div class="buttons">
            {{#if usuario}}
              <div>
                <a href="/admin/panelPrincipal" style="text-decoration: none">
                  <button class="button btn btn-danger" title="PanelAdmin">
                    Panel de Administrador
                  </button>
                </a>
              </div>
            {{else}}
              <div></div>
            {{/if}}
            {{#if usuario}}
              <a href="/admin/panelUsuario" style="text-decoration: none">
                <button class="button btn btn-danger" title="Usuario">
                  {{usuario}}
                </button>
              </a>
            {{else}}
              <a href="/admin/login" style="text-decoration: none">
                <button class="button btn btn-danger" title="Usuario">
                  Login
                </button>
              </a>
            {{/if}}
          </div>

        </nav>
      </div>
    </header>

    {{{body}}}

    <footer class="footer">
      <div class="content holder">
        <p class="copy">
          @2022 Gimnasio Craneo todos los derechos reservados
        </p>
      </div>
    </footer>

  </body>
